<% provide(:title, 'All users') %>
<h1>All users</h1>

<!-- it looks for an instance variable with the same name as a controller 
it is Users in this case-->
<%= will_paginate %>

<ul class="users">
 <%  @users.each do |user| %>
 

 <li>
 	<%= gravatar_for user, size: 52 %>
 	<%= link_to user.name, user %>
 </li>

 <% end %>
</ul>

